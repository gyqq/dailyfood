  page{
    background-color: #f0eff5;
  }
.addressList{
  padding-bottom:136rpx;
  /*height: 100%;*/
  /*width: 100%;*/

}
  .addressList .left{
    display: block;
    float: left;
  }
  .addressList .right{
    display: block;
    float: right;
  }
  .addressList .addressList-item{
    /*border-bottom: 1rpx solid #f0eff4;*/
    background-color:white ;
    margin-top: 2rpx;
  }
  /*地址类型*/
  .addressList .addressList-item .item-tip{
    width: 107rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 26rpx;
    color: #b68052;
    text-align: center;
  }
  /*中间信息*/
  .addressList .addressList-item .item-ifo{
    width: 530rpx;
    font-size: 26rpx;
    color: #3d2120;
    height: 120rpx;
  }
  .addressList .addressList-item .item-ifo .item-basicIfo{
    margin-top: 25rpx;
  }

  .addressList .addressList-item .item-ifo .item-basicIfo text:nth-child(2){
    margin-left:65rpx ;
  }
  /*编辑*/
  .addressList .addressList-item .item-editor{
    width: 107rpx;
